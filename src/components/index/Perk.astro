---
import { Image } from "astro:assets";

interface Props {
  label: string;
  img: ImageMetadata;
}

const { img, label } = Astro.props;
---

<div class="flex flex-col items-center gap-4">
  <p
    class="relative text-xl after:absolute after:-bottom-1 after:left-1/2 after:h-[2px] after:w-20 after:-translate-x-1/2 after:transform after:bg-main-900"
  >
    {label}
  </p>
  <Image src={img} alt="" class="rounded-full border" />
</div>
